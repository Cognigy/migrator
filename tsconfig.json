{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017", 
    "module": "commonjs",
    "rootDir": "src", 
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "watch": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "old",
    "build",
    "src/custom_modules/chrono-node",
    "src/custom_modules/node-normalizer",
    "src/custom_modules/qtypes2",
    "src/custom_modules/NumbersUtil",
    "./vscode",
    "src/shared"
  ]
}